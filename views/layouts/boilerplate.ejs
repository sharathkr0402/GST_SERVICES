<!DOCTYPE html>
<html>
  <head>
    <title>GST SERVICES 2024</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <style>
      #scroll {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 80%;
        justify-content: center;
      }
      #logodiv {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      #marquee {
        width: 100%;
        background-color: rgb(2, 145, 203);
        color: rgb(255, 149, 0);
        border-radius: 10px;
      }
      #logo {
        width: 5.5%;
        height: 5.5%;
        margin: 0.3%;
        margin-left: 6%;
        margin-right: 5%;
      }
      #pa {
        font-weight: bold;
        font-size: 20px;
        color: green;
        text-align: center;
      }
      #registerlogin {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
      }
      #registerlogin .btn {
        width: 100px;
        padding-left: 20px;
        padding-right: 20px;
        margin-left: 15px;
        margin-right: 15px;
        font-size: large;
      }
      #logout1 {
        display: flex;
      }
      #logout1 img {
        width: 80px;
        height: 80px;
        border: 2px solid black;
        margin: 5px;
      }
      #logout2 {
        display: flex;
        flex-direction: column;
        text-align: center;
        width: 200px;
        margin: 8px 0px 8px 0px;
      }
    </style>
  </head>
  <body>
    <div id="logodiv">
      <img src="../images/logo.jpeg" id="logo" />
      <div id="scroll">
        <marquee id="marquee" direction="scroll" class="fw-bold fs-4">
          Contact Your Respective District Manager for Training and
          Support.</marquee
        >
        <p id="pa">Call For Support: 8050-885-885</p>
      </div>
      <% if (!user){ %>
      <div id="registerlogin">
        <a href="/register">
          <button type="button" class="btn btn-warning">
            <b>Register</b>
          </button></a
        >
        <a href="/login">
          <button type="button" class="btn btn-primary"><b>Login</b></button></a
        >
      </div>
      <%}else{%>
      <div id="logout1">
        <a href="/profileDetails"
          ><img src="/images/<%= user.image %>" alt="Profile Image" width="150"
        /></a>
        <div id="logout2">
          <h5 style="font-size: 17px; padding-top: 10px">
            <b><%= user.name %></b>
          </h5>
          <a href="/logout">
            <button type="button" class="btn btn-danger">
              <b>Logout</b>
            </button></a
          >
        </div>
      </div>
      <%}%>
    </div>
    <%- include('../partials/navbar') %> <%- body%> <%-
    include('../partials/footer') %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

