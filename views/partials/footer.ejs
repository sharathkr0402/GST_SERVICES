<style>
  * {
    box-sizing: border-box;
  }

  html,
  body {
    height: 100%;
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  main {
    flex-grow: 1; /* Main content grows to fill space */
  }

  /* Footer Styles */
  footer {
    background-color: rgb(2, 145, 203);
    width: 100%;
    padding: 1rem 0;
  }

  .about {
    background-color: rgb(13, 16, 99);
    padding: 10px 0;
  }

  .about .container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 15px;
  }

  .about a {
    color: white;
    text-decoration: none;
    font-size: 1rem;
    padding: 5px;
    transition: color 0.3s ease;
  }

  .about a:hover {
    color: #ddd;
  }

  .copyright {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 10px 0;
    background-color: rgb(2, 145, 203);
  }

  .copyright .text-light {
    color: white;
    margin-bottom: 10px;
    font-size: 1rem;
  }

  .contact {
    display: flex;
    justify-content: center;
    gap: 15px;
  }

  .contact a {
    color: white;
    font-size: 1.5rem;
    padding: 8px;
    border-radius: 50%;
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  .contact a:hover {
    color: black;
    background-color: white;
  }

  /* Responsive styles */
  @media (max-width: 768px) {
    .about .container {
      flex-direction: column;
      align-items: center;
    }

    .about a {
      font-size: 0.9rem;
    }

    .contact {
      gap: 10px;
    }
  }

  @media (max-width: 480px) {
    .about a {
      font-size: 0.85rem;
    }

    .contact a {
      font-size: 1.3rem;
      padding: 6px;
    }
  }
</style>

<body>
  <main>
    <!-- Main content goes here -->
  </main>

  <footer>
    <div class="about">
      <div class="container fw-bold">
        <a href="/about">About BGB & SWI</a>
        <a href="/contact">Contact Us</a>
        <a href="/terms">Terms & Conditions</a>
        <a href="/privacy">Privacy Policy</a>
        <a href="/refund">Refund Policy</a>
      </div>
    </div>
    <div class="container copyright">
      <span class="text-light">&copy; BHARATHIYA GRAMEENA BANKING</span>
      <div class="contact">
        <a href="#"><i class="fa-brands fa-whatsapp"></i></a>
        <a href="#"><i class="fa-brands fa-facebook"></i></a>
        <a href="#"><i class="fa-brands fa-twitter"></i></a>
        <a href="#"><i class="fa-brands fa-youtube"></i></a>
      </div>
    </div>
  </footer>
</body>
