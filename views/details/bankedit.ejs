<style>
  #editbank-div {
    width: 50%;
    height: 75%;
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%, 8%);
    background-color: antiquewhite;
    padding: 20px;
    padding-left: 40px;
    padding-right: 40px;
    border-radius: 20px;
    text-align: center;
    margin-bottom: 80px;
  }
  #editbank-div a {
    text-decoration: none;
  }
  #editbank-div .form-label {
    width: 270px;
    font-weight: bold;
    padding-top: 5px;
  }
  #editbank-div .editbank-ele {
    display: flex;
    margin: 15px;
  }
  #editbank-div button {
    margin: 10px;
  }
  #editbank-div h3 {
    padding: 5px;
    border-radius: 5px;
  }
  .role-form {
    display: flex;
  }
</style>
<% layout('layouts/boilerplate')%>
<form
    action="/editbank"
    method="POST"
    enctype="multipart/form-data"
    id="editbank-form"
  >
    <div class="editbank-ele">
      <label for="bankName" class="form-label">Bank Name</label>
      <input
        id="bankName"
        class="form-control"
        type="text"
        name="bankName"
        required
      />
    </div>

    <div class="editbank-ele">
      <label for="accountNo" class="form-label">Account Number</label>
      <input
        id="accountNo"
        class="form-control"
        type="text"
        name="accountNo"
        required
      />
    </div>
    <div class="editbank-ele">
      <label for="ifscCode" class="form-label">IFSC code</label>
      <input
        id="ifscCode"
        class="form-control"
        type="text"
        name="ifscCode"
        minlength="11"
        maxlength="11"
        required
      />
    </div>
    <button type="submit" class="btn btn-warning"><b>Update</b></button>
  </form>
