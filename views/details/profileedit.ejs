<style>
  #editbank-div {
    width: 50%;
    height: 75%;
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%, 8%);
    background-color: antiquewhite;
    padding: 20px;
    padding-left: 40px;
    padding-right: 40px;
    border-radius: 20px;
    text-align: center;
    margin-bottom: 80px;
  }
  #editbank-div a {
    text-decoration: none;
  }
  #editbank-div .form-label {
    width: 270px;
    font-weight: bold;
    padding-top: 5px;
  }
  #editbank-div .editbank-ele {
    display: flex;
    margin: 15px;
  }
  #editbank-div button {
    margin: 10px;
  }
  #editbank-div h3 {
    padding: 5px;
    border-radius: 5px;
  }
  .role-form {
    display: flex;
  }
</style>
<% layout('layouts/boilerplate')%>
<form
  action="/editbank"
  method="POST"
  enctype="multipart/form-data"
  id="editbank-form"
>
  <div id="mobilediv" class="editbank-ele">
    <label for="mobile" class="form-label">Mobile Number</label>
    <input
      id="mobile"
      class="form-control"
      type="tel"
      name="mobile"
      minlength="10"
      maxlength="10"
      required
    />
  </div>
  <div class="editbank-ele">
    <label for="address" class="form-label">Address</label>
    <input
      id="address"
      class="form-control"
      type="text"
      name="address"
      maxlength="60"
      required
    />
  </div>
  <div id="imagediv" class="editbank-ele">
    <label for="image" class="form-label">Upload Image</label>
    <input
      id="image"
      type="file"
      class="form-control"
      name="image"
      accept="image/*"
      required
    />
  </div>

  <% if (user.role=="retailer" || user.role=="subdistributor" ||
  user.role=="distributor"){ %>
  <div class="editbank-ele">
    <label for="masterDistributorId" class="form-label"
      >Master Distributor Email</label
    >
    <input
      type="text"
      id="masterDistributorId"
      name="masterDistributorId"
      class="form-control"
    />
  </div>
  <%}%> <% if (user.role=="retailer" || user.role=="subdistributor"){ %>
  <div id="distributorIdField" class="editbank-ele">
    <label for="distributorId" class="form-label">Distributor Email</label>
    <input
      type="text"
      id="distributorId"
      name="distributorId"
      class="form-control"
    />
  </div>
  <%}%> <% if (user.role=="retailer" ){ %>
  <div id="subDistributorIdField" style="display: none" class="editbank-ele">
    <label for="subDistributorId" class="form-label"
      >Sub Distributor Email</label
    >
    <input
      type="text"
      id="subDistributorId"
      name="subDistributorId"
      class="form-control"
    />
  </div>
  <%}%>
  <button type="submit" class="btn btn-warning"><b>Update</b></button>
</form>
