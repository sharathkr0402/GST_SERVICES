<style>
  #imageCarousel {
    width: 100%;
    margin: 20px auto;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.4);
  }

  #imageform {
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
  }

  .carousel-item img {
    width: 100%;
    height: 400px;
    object-fit: cover;
  }
  h1 {
    text-align: center;
    color: #08377c;
  }
  .term {
    margin: 40px;
    padding: 40px;
    background-color: rgb(2, 145, 203, 0.3);
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.4); /* Horizontal offset, vertical offset, blur radius, shadow color */
  }
  .term > div {
    margin-bottom: 50px;
  }
  .mission {
    display: flex;
    margin: 20px;
    background-color: #08377c;
    border-radius: 10px;
    box-shadow: 10px 10px 15px rgba(0, 0, 0, 0.3);
    color: white;
    width: 85%;
    margin-left: auto;
    margin-right: auto;
  }
  .mission1 {
    padding: 4%;
    text-align: justify;
  }
  .mission2 {
    padding: 4%;
    text-align: justify;
  }
  #values {
    width: 90%;
    margin-right: auto;
    margin-left: auto;
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 10px 10px 15px rgba(0, 0, 0, 0.3);
  }
  #goals {
    width: 90%;
    margin-right: auto;
    margin-left: auto;
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 10px 10px 15px rgba(0, 0, 0, 0.3);
  }
  #services {
    width: 90%;
    margin-right: auto;
    margin-left: auto;
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 10px 10px 15px rgba(0, 0, 0, 0.3);
  }
  #values img {
    width: 100%;
    object-fit: cover;
  }
  #goals img {
    width: 100%;
    object-fit: cover;
  }
  #services img {
    width: 100%;
    object-fit: cover;
  }
  .serviceclass {
    display: flex;
    width: 90%;
    margin-right: auto;
    margin-left: auto;
    border-radius: 10px;
    box-shadow: 10px 10px 15px rgba(0, 0, 0, 0.3);
    overflow: hidden;
    background-color: #08377c;
  }
  .infoclass {
    background-color: #08377c;
    color: white;
    width: 30%;
    padding: 10px;
    margin: auto;
  }
  .infoclass p {
    font-size: large;
  }
  .imgclass {
    overflow: hidden;
  }
  .imgclass img {
    width: 100%;
    object-fit: cover;
  }
  #aitools {
    width: 90%;
    margin-right: auto;
    margin-left: auto;
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 10px 10px 15px rgba(0, 0, 0, 0.3);
  }
  #aitools img {
    width: 100%;
    object-fit: cover;
  }
  .splservice1 {
    background-color: #08377c;
    color: white;
    width: 90%;
    margin-right: auto;
    margin-left: auto;
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 10px 10px 15px rgba(0, 0, 0, 0.3);
  }
  .splservice2 {
    color: black;
  }
  .splservice2 p {
    text-align: justify;
  }
  .splservice2 h4 {
    text-align: center;
  }
  .splservice2 .splservice3 {
    display: flex;
    justify-content: space-around;
  }
  .splservice2 .splservice3 > div {
    padding: 10px;
    margin: 30px;
    border-radius: 10px;
    background-color: white;
  }
  .splservice3 img {
    display: block;
    width: 50px;
    margin-left: auto;
    margin-right: auto;
  }
  #milestone {
    width: 90%;
    margin-right: auto;
    margin-left: auto;
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 10px 10px 15px rgba(0, 0, 0, 0.3);
  }
  #milestone img {
    width: 100%;
    object-fit: cover;
  }
  #ourassociation {
    width: 50%;
    margin-right: auto;
    margin-left: auto;
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 10px 10px 15px rgba(0, 0, 0, 0.3);
  }
  #ourassociation img {
    width: 100%;
    object-fit: cover;
  }
  #ournetwork {
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.4);
  }
  #ournetwork img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .mediaimg {
    display: flex;
    justify-content: space-between;
  }
  .mediaimages {
    width: 48%; /* Set the desired width for the div */
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 10px 10px 15px rgba(0, 0, 0, 0.3);
  }
  .mediaimages img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Media Queries for Responsive Design */
  @media (max-width: 768px) {
    .mission {
      flex-direction: column; /* Stack elements vertically */
      width: 100%; /* Full width on mobile */
    }
    .serviceclass {
      flex-direction: column; /* Stack services vertically */
      width: 100%; /* Full width on mobile */
    }
    .infoclass {
      width: 100%; /* Full width for info class */
    }
    .serviceclass .imgclass,
    .serviceclass .infoclass {
      width: 100%; /* Full width for both sections */
    }
    .serviceclass img {
      width: 100%; /* Full width images */
    }
    .splservice2 .splservice3 {
      flex-direction: column; /* Stack specialized services vertically */
      width: 100%; /* Full width on mobile */
      object-fit: cover;
    }
    .splservice3 > div {
      margin: 10px 20px !important;
      width: 86%; /* Full width for each service */
    }
  }

  @media (max-width: 480px) {
    h1 {
      font-size: 1.5em; /* Smaller font size for headings */
    }
    .term {
      margin: 10px; /* Reduce margin for mobile */
      padding: 10px; /* Reduce padding for mobile */
    }
    .mission,
    .serviceclass {
      padding: 10px; /* Reduce padding for mobile */
    }
  }
  @media (max-width: 768px) {
    ul button {
      width: 100%;
    }
    .carousel-item img {
      height: 150px;
    }
    #imageform,
    #imageform button {
      width: 100%;
      font-size: 0.7em;
    }
  }
</style>

<% layout('layouts/boilerplate')%>
<div class="container">
  <!-- Upload Form (Visible only for admin) -->
  <% if (user) { %>
  <form
    action="/upload"
    method="POST"
    enctype="multipart/form-data"
    id="imageform"
  >
    <div class="form-group">
      <input type="file" name="image" required class="form-control-file" />
    </div>
    <button type="submit" class="btn btn-primary">Upload Image</button>
  </form>
  <% } %>

  <!-- Carousel -->
  <div
    id="imageCarousel"
    class="carousel slide"
    data-ride="carousel"
    data-interval="3000"
  >
    <div class="carousel-inner">
      <% images.forEach((image, index) => { %>
      <div
        class="carousel-item <%= index === 0 ? 'active' : '' %>"
        data-bs-interval="2"
      >
        <img src="<%= image.url %>" class="d-block w-100" alt="Image" />
        <div class="carousel-caption d-none d-md-block">
          <% if (user) { %>
          <form action="/delete/<%= image._id %>" method="POST">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
          <% } %>
        </div>
      </div>
      <%}) %>
    </div>
    <a
      class="carousel-control-prev"
      href="#imageCarousel"
      role="button"
      data-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a
      class="carousel-control-next"
      href="#imageCarousel"
      role="button"
      data-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
