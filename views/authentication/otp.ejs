<style>
  #otp-div {
    width: 30%;
    height: 35%;
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%, 20%);
    background-color: antiquewhite;
    padding: 20px;
    padding-left: 40px;
    padding-right: 40px;
    border-radius: 20px;
    text-align: center;
  }
  #otp-div a {
    text-decoration: none;
  }
  #otp-form {
    display: flex;
  }
  #otp-form label {
    width: 200px;
    padding-top: 5px;
  }
  #otp-div button {
    margin: 20px;
  }
  #otp-div h3 {
    margin-bottom: 30px;
    color: white;
    border-radius: 5px;
    padding: 5px;
  }
</style>
<% layout('layouts/boilerplate')%>
<div id="otp-div">
  <h3 class="bg-primary">OTP Verification</h3>

  <% if(errors && errors.length > 0){ %>
  <ul>
    <% errors.forEach(function(error){ %>
    <li style="color: red"><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>

  <form action="/otp" method="POST">
    <div id="otp-form">
      <label for="otp" class="form-label"><b>Enter OTP</b></label>
      <input type="text" name="otp" class="form-control" id="otp" required />
    </div>
    <button type="submit" class="btn btn-primary">
      <b>Verify OTP</b>
    </button>
  </form>

  <p>
    Didn't receive OTP? <a href="/login"><b>Login again</b></a>
  </p>
</div>
