<style>
  h1,
  p {
    text-align: center;
    margin: 0; /* Remove default margin */
  }

  .term {
    text-align: justify;
    margin: 40px; /* Reduced margin for better mobile spacing */
    padding: 20px; /* Reduced padding for better mobile spacing */
