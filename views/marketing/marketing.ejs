<style>
  /* General container styling */
  .marketing {
    max-width: 1200px;
    background-color: antiquewhite;
    margin: 40px auto;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.4);
    padding: 50px;
    text-align: justify;
  }

  /* Heading */
  h2 {
    font-size: 2rem;
    color: #007bff;
    text-align: center;
    margin-bottom: 20px;
  }

  /* Responsive text sizing */
  p,
  ul,
  li {
    font-size: 1rem;
    line-height: 1.6;
    color: #333;
  }

  /* Table responsiveness */
  .table-responsive {
    overflow-x: auto;
  }

  .table {
    width: 100%;
    border-collapse: collapse;
  }

  th,
  td {
    padding: 0.75rem;
    text-align: left;
  }

  /* Table styling */
  th {
    background-color: #007bff;
    color: #fff;
  }

  tr:nth-child(even) {
    background-color: #f2f2f2;
  }

  /* Links */
  a {
    color: #007bff;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    .marketing {
      margin: 15px;
      padding: 15px;
    }

    h2 {
      font-size: 1.5rem;
    }

    p,
    ul,
    li {
      font-size: 0.9rem;
    }

    th,
    td {
      font-size: 0.85rem;
      padding: 0.5rem;
    }
  }
</style>
